<Window x:Class="SlipStream.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlipStream"
        xmlns:ViewModel="clr-namespace:SlipStream.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None" WindowState="Maximized"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True" Background="Transparent"
        Title="ShellWindow" Width="1920" Height="1080">

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#2F4858"
            Margin="5"
            CornerRadius="25,25,0,0">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image Source="/Core/Images/background_stock.jpg" RenderOptions.BitmapScalingMode="HighQuality"
                   Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="2" Stretch="UniformToFill"/>

            <Border Grid.ColumnSpan="2" CornerRadius="10,10,0,0" MouseDown="Border_MouseDown">
                <Grid  HorizontalAlignment="Stretch">
                    <Label 
                       VerticalAlignment="Center" HorizontalAlignment="Left" 
                       Content="SlipStream V1.0" 
                       Margin="10,0,0,0"
                        FontSize="6"/>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,3,10,0">
                        <Button Click="MinimizeButton_Click" Width="30" Style="{StaticResource TopbarCloseButtonTheme}">
                            <TextBlock Text="–" Margin="0,-3,0,0" FontSize="20"/>
                        </Button>
                        <Button Click="FullscreenButton_Click" Width="30" Style="{StaticResource TopbarCloseButtonTheme}">
                            <TextBlock x:Name="MinMaxIcon" Text="1" Margin="0,0,-1,-1" FontSize="16" FontFamily="Marlett"/>
                        </Button>
                        <Button Click="CloseButton_Click" Width="45" Style="{StaticResource TopbarCloseButtonTheme}" >
                            <TextBlock Text="x" Margin="0,-5,0,0" FontSize="20"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.RowSpan="3" CornerRadius="25,0,0,0">
                
                <StackPanel Margin="5,15,5,0">

                    <Label 
                    Content="SlipStream" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Padding="0,25,0,15"
                    HorizontalAlignment="Center"/>

                    <Button
                            Style="{StaticResource HomeButtonTheme}"
                            Content="Home"
                            Command="{Binding HomeViewCommand}" 
                        HorizontalContentAlignment="Stretch" 
                        VerticalContentAlignment="Stretch" 
                        BorderThickness="5,5,5,5">
                        <Button.Resources>
                            <ImageSource x:Key="ImageURI">/Core/Images/home_32px.png</ImageSource>
                        </Button.Resources>
                    </Button>

                    <Button
                            Style="{StaticResource HomeButtonTheme}"
                            Content="Driver"
                            Command="{Binding DriverViewCommand}">
                        <Button.Resources>
                            <ImageSource x:Key="ImageURI">/Core/Images/steering_wheel.png</ImageSource>
                        </Button.Resources>
                    </Button>

                    <Button
                            Style="{StaticResource HomeButtonTheme}"
                            Content="Race Control"
                            Command="{Binding RaceControlViewCommand}">
                        <Button.Resources>
                            <ImageSource x:Key="ImageURI">/Core/Images/bossy_50px.png</ImageSource>
                        </Button.Resources>
                    </Button>

                    <Button
                            Style="{StaticResource HomeButtonTheme}"
                            Content="Engineer"
                            Command="{Binding EngineerViewCommand}">
                        <Button.Resources>
                            <ImageSource x:Key="ImageURI">/Core/Images/wrench_24px.png</ImageSource>
                        </Button.Resources>
                    </Button>

                    <Button BorderThickness="0" 
                        Background="Transparent" 
                        Width="45"
                        Margin="0,25,0,0" Click="DiscordButton_Click"
                        >
                        <Image Source="/Core/Images/discord.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>


                </StackPanel>
            </Border>
            

            <ContentControl
                x:Name="ShellContent"
                Content="{Binding CurrentView}"
                Grid.Column="1"
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="5"/>
        </Grid>
    </Border>
</Window>
