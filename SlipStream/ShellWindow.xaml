<Window x:Class="SlipStream.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlipStream"
        xmlns:ViewModel="clr-namespace:SlipStream.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        Title="ShellWindow" Height="625" Width="920">

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="White"
            Margin="5">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="2" Background="Crimson" CornerRadius="10,10,0,0" MouseDown="Border_MouseDown">
                <Grid  HorizontalAlignment="Stretch">
                    <Label 
                       VerticalAlignment="Center" HorizontalAlignment="Left" 
                       Content="SlipStream V1.0" 
                       Margin="10,0,0,0"
                        FontSize="6"/>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,3,0,0">
                        <Button Click="MinimizeButton_Click" Width="30" Style="{StaticResource TopbarCloseButtonTheme}">
                            <TextBlock Text="–" Margin="0,-3,0,0" FontSize="20"/>
                        </Button>
                        <Button Click="FullscreenButton_Click" Width="30" Style="{StaticResource TopbarCloseButtonTheme}">
                            <TextBlock x:Name="MinMaxIcon" Text="1" Margin="0,0,-1,-1" FontSize="16" FontFamily="Marlett"/>
                        </Button>
                        <Button Click="CloseButton_Click" Width="45" Style="{StaticResource TopbarCloseButtonTheme}" >
                            <TextBlock Text="x" Margin="0,-5,0,0" FontSize="20"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>


            <StackPanel 
                    Grid.Row="1" 
                    Grid.RowSpan="2"
                    Margin="5">

                <Label 
                    Content="SlipStream" 
                    Foreground="Crimson" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Padding="0,15,0,15"
                    HorizontalAlignment="Center"/>

                <Button
                            Style="{StaticResource MyButtonStyle}"
                            Content="Home"
                            Command="{Binding HomeViewCommand}" 
                        HorizontalContentAlignment="Stretch" 
                        VerticalContentAlignment="Stretch" 
                        BorderThickness="5,5,5,5">
                    <Button.Resources>
                        <ImageSource x:Key="ImageURI">/Core/Images/home_32px.png</ImageSource>
                    </Button.Resources>
                </Button>

                <Button
                            Style="{StaticResource MyButtonStyle}"
                            Content="Driver"
                            Command="{Binding DriverViewCommand}">
                    <Button.Resources>
                        <ImageSource x:Key="ImageURI">/Core/Images/steering_wheel.png</ImageSource>
                    </Button.Resources>
                </Button>

                <Button
                            Style="{StaticResource MyButtonStyle}"
                            Content="Race Control"
                            Command="{Binding RaceControlViewCommand}">
                    <Button.Resources>
                        <ImageSource x:Key="ImageURI">/Core/Images/bossy_50px.png</ImageSource>
                    </Button.Resources>
                </Button>

                <Button
                            Style="{StaticResource MyButtonStyle}"
                            Content="Engineer"
                            Command="{Binding EngineerViewCommand}">
                    <Button.Resources>
                        <ImageSource x:Key="ImageURI">/Core/Images/wrench_24px.png</ImageSource>
                    </Button.Resources>
                </Button>

                <Button BorderThickness="0" 
                        Background="Transparent" 
                        Width="45"
                        Margin="0,25,0,0" Click="DiscordButton_Click"
                        >
                    <Image Source="/Core/Images/discord.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>


            </StackPanel>

            <ContentControl
                x:Name="ShellContent"
                Content="{Binding CurrentView}"
                Grid.Column="1"
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="5"/>
        </Grid>
    </Border>
</Window>
