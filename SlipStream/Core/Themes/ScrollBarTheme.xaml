<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ScrollBarTheme" TargetType="ScrollBar">
        <Setter Property="Background" Value="#FF1B303D" />
        <Setter Property="BorderBrush" Value="#2F4858"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style x:Key="ScrollBarThumbTheme" TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="#FF1B303D" />
        <Setter Property="BorderBrush" Value="#2F4858"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border CornerRadius="2" Background="AliceBlue" BorderBrush="Yellow" BorderThickness="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>