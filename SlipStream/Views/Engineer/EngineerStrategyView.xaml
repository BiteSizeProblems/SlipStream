<UserControl x:Class="SlipStream.Views.EngineerStrategyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlipStream.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Border 
        Padding="10"
        Background="White"
        CornerRadius="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Laps Left" FontSize="28" />
            <TextBlock Text="{Binding DriverName}" FontSize="28"  HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Weather}" FontSize="28"  HorizontalAlignment="Right"/>

            <Border Grid.Row="1">

                <Grid >

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border
                    CornerRadius="10"
                    Margin="2">
                        <GroupBox Header="Performance"
                          FontWeight="Bold"
                          Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Speed Trap: "/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">

                                </StackPanel>

                            </Grid>
                        </GroupBox>
                    </Border>

                    <Border 
                    CornerRadius="10"
                    Margin="2"
                    Grid.Row="1">
                        <GroupBox 
                          Header="Tire Data"
                          FontWeight="Bold"
                          Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>

                                </StackPanel>
                                <StackPanel Grid.Column="1">

                                </StackPanel>

                            </Grid>
                        </GroupBox>
                    </Border>

                    <Border 
                    CornerRadius="10"
                    Margin="2"
                    Grid.Column="1">
                        <GroupBox 
                          Header="Lap Data"
                          FontWeight="Bold"
                          Margin="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding TimeRemaining}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding DriverName}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding LastLapTime}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding BestLapTime}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding BestS1Time}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding BestS2Time}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding BestS3Time}" Foreground="White" Padding="10"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">

                                </StackPanel>

                            </Grid>
                        </GroupBox>
                    </Border>

                    <Border 
                    CornerRadius="10"
                    Margin="2"
                    Grid.Row="1" 
                    Grid.Column="1">
                        <GroupBox 
                          Header="Comparison"
                          FontWeight="Bold"
                          Margin="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>

                                </StackPanel>
                                <StackPanel Grid.Column="1">

                                </StackPanel>

                            </Grid>
                        </GroupBox>
                    </Border>

                    <Border 
                    CornerRadius="10"
                    Margin="2"
                    Grid.Column="2">
                        <GroupBox 
                          Header="Updates"
                          FontWeight="Bold"
                          Margin="2">

                            <StackPanel>
                                <TextBlock Text="{Binding SafetyCarStatus}"/>
                                <TextBlock Text="Weather"/>
                            </StackPanel>

                        </GroupBox>
                    </Border>

                    <Border 
                    CornerRadius="10"
                    Margin="2"
                    Grid.Row="1" 
                    Grid.Column="2">
                        <GroupBox 
                          Header="Warnings and Penalties"
                          FontWeight="Bold"
                          Margin="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Warnings}" Foreground="White" Padding="10"/>
                                    <TextBlock Text="{Binding Penalties}" Foreground="White" Padding="10"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">

                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
