<UserControl x:Class="SlipStream.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlipStream.Views" xmlns:viewmodels="clr-namespace:SlipStream.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border Background="Transparent">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Session Overview" 
                   Foreground="White" 
                   FontSize="50" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5,10,5,10">
                <StackPanel Margin="10">
                    <Label Content="Connection Details" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Padding="10"/>
                    <TextBlock Text="{Binding ConnectionStatus}"
                               Padding="10"
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Label Content="Session Details" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Padding="10"/>
                    <TextBlock Text="{Binding Formula}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding Circuit}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding CurrentSession}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding CurrentWeather}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding SessionDuration}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding SessionTimeRemaining}"
                               Padding="10"
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Label Content="Participants" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Padding="10"/>
                    <TextBlock Text="{Binding NumOfActiveCars}"
                               Padding="10"
                               Foreground="White"/>
                    <TextBlock Text="{Binding NumOfParticipants}"
                               Padding="10"
                               Foreground="White"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>

</UserControl>
