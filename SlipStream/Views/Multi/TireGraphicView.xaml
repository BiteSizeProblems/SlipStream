<UserControl x:Class="SlipStream.Views.Multi.TireGraphicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="clr-namespace:System.Drawing.Configuration;assembly=System.Drawing"
             xmlns:converters="clr-namespace:SlipStream.Core.Converters"
             xmlns:local="clr-namespace:SlipStream.Views.Multi" 
             xmlns:utils="clr-namespace:SlipStream.Core.Utils"
             Background="Transparent"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="200">
    
    <StackPanel>

        <StackPanel Margin="0,20">

            <Grid>
                <Ellipse Height="100" Width="100" Margin="15"
                 StrokeThickness="10" Stroke="yellow"/>

                <TextBlock Text="M" Foreground="Yellow" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            
            
            <ProgressBar Height="25" Value="10" Background="Transparent" Minimum="0" Maximum="22"/>
        </StackPanel>
        

    </StackPanel>
    
</UserControl>
