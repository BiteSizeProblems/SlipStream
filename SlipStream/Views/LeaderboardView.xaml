<UserControl x:Class="SlipStream.Views.LeaderboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlipStream.Views"
             mc:Ignorable="d" 
             Height="600" Width="875">

    <Border>
        <DataGrid Background="White" 
                  Name="Leaderboard" 
                  ItemsSource="{Binding Path=IntArr}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Driver Name"
                    Binding="{Binding DriverName}"/>
                <DataGridTextColumn 
                    Header="Team"
                    Binding="{Binding TeamName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>
